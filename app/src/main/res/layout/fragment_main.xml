<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_bg"
    android:keepScreenOn="true">

    <ImageView
        android:id="@+id/btn_setting"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/icon_setting"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"/>

    <View
        android:id="@+id/setting_red_dot"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:background="@drawable/red_dot"
        android:layout_gravity="end|top"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_call"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/lp_demoapp_main_btn1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:background="@drawable/selector_normal_button"
        android:theme="@style/button_normal"/>

    <Button
        android:id="@+id/btn_group_call"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/lp_demoapp_main_btn2"
        android:layout_below="@+id/btn_call"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/selector_normal_button"
        android:theme="@style/button_normal"/>

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_group_call"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:theme="@style/textview_description_red"
        android:text="@string/lp_demoapp_main_guide"/>

    <TextView
        android:id="@+id/tv_sdk_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/tv_app_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_sdk_version"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textSize="15sp"/>
</RelativeLayout>